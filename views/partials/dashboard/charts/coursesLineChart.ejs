<div class="line-chart-container col-4" >
  <canvas id="courses-line-chart-dashboard-months" aria-label="Number of new Courses Each Month" role="img"></canvas>
  </div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const coursesCounts = <%- JSON.stringify(analytics.NoOfCoursesList) %>;
  const ctx = document.getElementById('courses-line-chart-dashboard-months');
  var coursesCountsMonths = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul","Aug", "Sep", "Oct", "Nov", "Dec"]
  var coursesCounts_data = coursesCounts;
  var datasetLabel = "Number of Courses"
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: coursesCountsMonths,
      datasets: [{
        label: datasetLabel,
        data: coursesCounts_data,
        borderWidth: 3,
        borderColor: '#8c61ff',
      },],
    },
    options: {
      tension : 0.2,
      borderCapStyle:"round",
      pointStyle:false,
      hoverRadius:32,
      transitions: {
      show: {
        animations: {
          x: {
            from: 0
          },
          y: {
            from: 0
          }
        }
      },
      hide: {
        animations: {
          x: {
            to: 0
          },
          y: {
            to: 0
          }
        }
      }
    },
      scales: {
        x:{
          grid: {
      display: false
    }
        },
        y: {
          beginAtZero: false,
          grid: {
      display: false
    }
        }
      },
      plugins:{
        legend:{
          display:false
        },
        tooltip: {
                callbacks: {
                    label: function(context) {
                        let label =  '';

                        if (label) {
                            label += ': ';
                        }
                        if (context.parsed.y !== null) {
                            label += new Intl.NumberFormat('en-US',{}).format(context.parsed.y);
                        }
                        return label;
                    }
                }
            }
      }
    }
  });
  
</script>