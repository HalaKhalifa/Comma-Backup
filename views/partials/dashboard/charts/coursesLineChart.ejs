  <div class="ag-format-container">
    <div class="ag-courses_box">
      <div class="ag-courses_item">
        <div href="#" class="ag-courses-item_container">
          <div class="ag-courses-item_bg"></div>
          <div class="ag-courses-item_text-box">
            <span class="ag-courses-item_text">
              Number of courses in the past year
            </span>
          </div>
          <div class="line-chart-container" >
            <canvas id="courses-line-chart-dashboard-months" aria-label="Number of new Courses Each Month" role="img"></canvas>
            </div>
        </div>
